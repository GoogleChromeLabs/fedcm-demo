# Relying Party (RP) Demo
fedcm-demo-rp.localhost:8443 {
    reverse_proxy localhost:8080
    tls internal
    log {
        output stdout
        format json
    }
}

# Identity Provider 1 (IdP-1) Demo
fedcm-demo-idp.localhost:8443 {
    reverse_proxy localhost:8081
    tls internal
    log {
        output stdout
        format json
    }
}

# Identity Provider 2 (Another IdP) Demo
fedcm-demo-idp-2.localhost:8443 {
    reverse_proxy localhost:8082
    tls internal
    log {
        output stdout
        format json
    }
}